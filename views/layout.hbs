<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{appTitle}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body>
     <nav>
        <a href="/"><h3>FreeMarket</h3></a>

        <div>
           {{#unless userInSession}}
              <a href="/auth/login" class="mx-5">
                  <button class="btn btn-warning">Login</button>
              </a>
              <a href="/auth/signup"> 
                  <button class="btn btn-outline-warning">Registro</button>
              </a>
            {{/unless}}

            {{#if userInSession}}

              <a href="/profile">
                <img src="{{userInSession.foto}}" width="30" height="30"/>
                <strong>{{userInSession.username}}</strong>
              </a>

              <a href="/pedidos" class="mx-5">
                  <button class="btn btn-warning">Pedidos</button>
              </a>

              <a href="/metodosPago" class="mx-5">
                  <button class="btn btn-warning">Metodos de pago</button>
              </a>

              <a href="/auth/logout"> 
                  <button class="btn btn-outline-warning">Salir</button>
              </a>
            {{/if}}
        </div>
    </nav>
    {{{body}}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
  </body>

</html>