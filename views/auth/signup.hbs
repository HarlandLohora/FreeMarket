<link rel="stylesheet" href="/stylesheets/signup.css">


<section class="sectionSignUp">
  <div id="form" class="signUpForm">
    <h2>Sign Up</h2>
    <form action="/auth/signup" method="POST" class="formSignUp">

      <div class="names">
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">Name</label>
          <input type="text" class="form-control" id="exampleFormControlInput1" name="name" value="Snoppy">
        </div>
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">LastName</label>
          <input type="text" class="form-control" id="exampleFormControlInput1" name="lastname" value="Brown">
        </div>
      </div>
      <div class="names">
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">Username</label>
          <input type="text" class="form-control" id="exampleFormControlInput1" name="username" value="snoppy">
        </div>
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">BirthDay</label>
          <input type="datetime-local" class="form-control" id="exampleFormControlInput1" name="fechaNacimiento" >
        </div>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput2" class="form-label">Email address</label>
        <input type="email" class="form-control" id="exampleFormControlInput2" name="email" value="soy@snoopy.com">
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput3" class="form-label">Password</label>
        <input type="password" class="form-control" id="exampleFormControlInput3" name="password" value="Charlie123">
      </div>

      <div class="mb-3">
        <label for="exampleFormControlInput" class="form-label">Genero</label>
        <select name="genero" id="" value="" class="form-select">
          <option value="mujer" selected>Mujer</option>
          <option value="hombre">Hombre</option>
          <option value="otro">Otro</option>
        </select>
      </div>

      <div class="mb-3">
        Â¿Ya tienes una cuenta? <a href="/auth/login">Acceder</a>
      </div>

      <button type="submit" class="btn btn-outline-primary">Sign Up</button>


      {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
  </div>

  <div class="bgBici"></div>
</section>
